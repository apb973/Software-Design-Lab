//configured to work with Chrome, can be done with other browsers if need to
//configured to work with Eclipse, AndroidStudio is similar process

import java.util.Scanner;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class SeleniumTester {

	public static void main(String[] args) {
		WebDriver driver = new ChromeDriver();
		driver.get("http://www.austingasprices.com/");
		WebElement search = driver.findElement(By.name("ctl00$Content$P$PSC1$ps_txtSearch"));
		WebElement button = driver.findElement(By.name("ctl00$Content$P$PSC1$btnPSSearch"));
		search.sendKeys("78705");
		button.click();
		Scanner scanner = new Scanner(System.in);
		scanner.next();
		driver.close();
	}
}
